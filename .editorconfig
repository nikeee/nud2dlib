# https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf

# Don't use tabs for indentation.
[*.cs]
indent_style = tabs
indent_size = 2
insert_final_newline = true
charset = utf
end_of_line = lf

# XML project files
[*.{csproj,props,targets}]
indent_style = space
indent_size = 2
charset = utf-8-bom
